{
	"name": "suckless-monorepo",
	"private": true,
	"license": "MIT",
	"workspaces": [
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"check": "oxlint --type-check --type-aware",
		"check:fix": "oxlint --type-check --type-aware --fix",
		"fmt": "oxfmt --write .",
		"fmt:check": "oxfmt --check .",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "bun run build && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@types/bun": "^1.3.9",
		"bunup": "^0.16.26",
		"fast-check": "^4.5.3",
		"oxfmt": "^0.32.0",
		"oxlint": "^1.47.0",
		"oxlint-tsgolint": "^0.12.1",
		"typescript": "^5.9.3"
	}
}
